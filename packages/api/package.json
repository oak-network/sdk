{
  "name": "@oak-network/api",
  "version": "1.0.0",
  "description": "TypeScript SDK for Crowdsplit API",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./services": {
      "types": "./dist/services/index.d.ts",
      "default": "./dist/services/index.js"
    },
    "./services/*": {
      "types": "./dist/services/*.d.ts",
      "default": "./dist/services/*.js"
    },
    "./products/crowdsplit": {
      "types": "./dist/products/crowdsplit/index.d.ts",
      "default": "./dist/products/crowdsplit/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "test": "jest __tests__/unit --coverage",
    "test:unit": "jest __tests__/unit --coverage",
    "test:integration": "jest __tests__/integration --coverage",
    "test:all": "jest --coverage",
    "test:watch": "jest --watchAll"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.14.11",
    "jest": "^30.0.5",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  },
  "author": "",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "dependencies": {
    "dotenv": "^17.2.1",
    "nock": "^14.0.10"
  },
  "packageManager": "pnpm@10.17.1+sha512.17c560fca4867ae9473a3899ad84a88334914f379be46d455cbf92e5cf4b39d34985d452d2583baf19967fa76cb5c17bc9e245529d0b98745721aa7200ecaf7a"
}
